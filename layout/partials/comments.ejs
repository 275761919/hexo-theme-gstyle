<div class="comment-section">
  <% if (page.comments){ %>
    <% if (theme.disqus_shortname){ %>
    <div id="disqus_thread"></div>
    <script>
      var disqus_shortname = '<%= theme.disqus_shortname %>';
      (function(){
        var dsq = document.createElement('script');
        dsq.type = 'text/javascript';
        dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/<% if (page.comments) { %>embed.js<% } else { %>count.js<% } %>';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();
    </script>

  <% } else if(theme.duoshuo_shortname) { %>
   <div id="duoshuoContainer">
     <!-- 多说评论框 start -->
    <div class="ds-thread" id="ds-thread" data-thread-key="<%=page.source%>" data-title="<%= page.title %>" data-url="<%= page.permalink %>"></div>
    <!-- 多说评论框 end -->
   <!-- 多说公共JS代码 start (一个网页只需插入一次) -->
    <script type="text/javascript">
      var duoshuoQuery = {short_name:'<%= theme.duoshuo_shortname %>'};
    </script>
    <script src="//static.duoshuo.com/embed.js"></script>
    <!-- 多说公共JS代码 end -->
   </div>
  <% } %>
<% } %>

</div>